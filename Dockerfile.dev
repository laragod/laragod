# Stage 1: Dependencies
FROM php:8.4-cli-alpine AS php-extensions

# Install PHP extensions
RUN apk add --no-cache \
    git \
    zip \
    unzip \
    libzip-dev \
    icu-dev \
    libpng-dev \
    libjpeg-turbo-dev \
    libxml2-dev \
    curl-dev \
    oniguruma-dev \
    linux-headers \
    && docker-php-ext-configure gd --with-jpeg \
    && docker-php-ext-install \
    pdo \
    pdo_mysql \
    zip \
    intl \
    gd \
    bcmath \
    opcache \
    mbstring \
    xml

# Stage 2: Composer dependencies
FROM php-extensions AS composer

# Install Composer
COPY --from=composer:2.6 /usr/bin/composer /usr/bin/composer

# Suppress PHP 8.4 deprecation warnings from Composer dependencies
ENV COMPOSER_ALLOW_SUPERUSER=1
ENV COMPOSER_NO_INTERACTION=1

# Copy only files needed for composer
WORKDIR /app
COPY composer.json composer.lock ./

# Install dependencies (suppress PHP 8.4 deprecation warnings)
RUN php -d error_reporting='E_ALL & ~E_DEPRECATED' /usr/bin/composer install --ignore-platform-reqs --no-scripts --no-autoloader

# Stage 3: Final image
FROM php-extensions AS runtime

# Copy Composer binary
COPY --from=composer:2.6 /usr/bin/composer /usr/bin/composer

# Setup work directory
WORKDIR /var/www

# Copy composer dependencies from build stage
COPY --from=composer /app/vendor ./vendor

# Copy application code
COPY . .

# Create complete storage structure before running any Laravel commands
RUN mkdir -p \
    bootstrap/cache \
    storage/app/public \
    storage/framework/cache/data \
    storage/framework/sessions \
    storage/framework/testing \
    storage/framework/views \
    storage/logs \
    && chmod -R 775 storage bootstrap/cache

# Generate autoload files and run post-install scripts (suppress PHP 8.4 deprecation warnings)
RUN php -d error_reporting='E_ALL & ~E_DEPRECATED' /usr/bin/composer dump-autoload --optimize

CMD ["php", "artisan", "test"]
