{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "nunomaduro/essentials": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "barryvdh/laravel-ide-helper": "^3.6",
        "carthage-software/mago": "1.0.1",
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ],
        "test": [
            "php artisan view:clear",
            "php artisan config:clear --ansi",
            "php artisan test --parallel"
        ],
        "coverage": [
            "@php artisan test --coverage-clover coverage/clover.xml --coverage-html coverage/html --parallel"
        ],
        "mago:format": [
            "vendor/bin/mago format"
        ],
        "mago:format:check": [
            "vendor/bin/mago format --dry-run"
        ],
        "mago:lint": [
            "vendor/bin/mago lint --fix"
        ],
        "mago:lint:check": [
            "vendor/bin/mago lint"
        ],
        "mago:lint:baseline": [
            "vendor/bin/mago lint --generate-baseline"
        ],
        "stan:analyse": [
            "@stan:app",
            "@stan:tests"
        ],
        "stan:app": [
            "vendor/bin/phpstan analyse --configuration=phpstan.neon --memory-limit=8G --no-progress --no-interaction --error-format=table"
        ],
        "stan:tests": [
            "vendor/bin/phpstan analyse --configuration=phpstan-tests.neon --memory-limit=8G --no-progress --no-interaction --error-format=table"
        ],
        "stan:baseline": [
            "@stan:baseline:app",
            "@stan:baseline:tests"
        ],
        "stan:baseline:app": [
            "vendor/bin/phpstan analyse --configuration=phpstan.neon --memory-limit=8G --no-progress --no-interaction --error-format=github --generate-baseline --allow-empty-baseline"
        ],
        "stan:baseline:tests": [
            "vendor/bin/phpstan analyse --configuration=phpstan-tests.neon --memory-limit=8G --no-progress --no-interaction --error-format=github --generate-baseline=phpstan-tests-baseline.neon --allow-empty-baseline"
        ],
        "rector": [
            "vendor/bin/rector process --ansi"
        ],
        "rector:check": [
            "vendor/bin/rector process --dry-run --ansi"
        ],
        "doit": [
            "@mago:format",
            "@mago:lint",
            "@rector",
            "@stan:baseline"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
